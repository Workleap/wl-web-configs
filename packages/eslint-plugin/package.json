{
    "name": "@workleap/eslint-plugin",
    "author": "Workleap",
    "description": "Workleap ESLint rules and configs.",
    "version": "1.1.0",
    "keywords": [
        "workleap",
        "eslint",
        "eslintconfig",
        "eslintplugin",
        "eslint-config",
        "eslint-plugin"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Workleap/wl-web-configs.git",
        "directory": "packages/eslint-plugin"
    },
    "license": "Apache-2.0",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "docs",
        "dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "build": "tsup",
        "clean": "pnpm dlx rimraf dist node_modules",
        "test": "jest",
        "lint:types": "tsc --noEmit"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "5.57.1",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-jest": "27.2.1",
        "eslint-plugin-jsx-a11y": "6.7.1",
        "eslint-plugin-react": "7.32.2",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-storybook": "0.6.11",
        "eslint-plugin-testing-library": "5.10.2",
        "eslint-plugin-mdx": "2.0.5"
    },
    "devDependencies": {
        "@workleap/typescript-configs": "workspace:*",
        "@types/eslint": "8.37.0",
        "@types/estree": "1.0.0",
        "@typescript-eslint/parser": "5.58.0",
        "eslint": "8.38.0",
        "jest": "29.5.0",
        "ts-jest": "29.1.0",
        "ts-node": "10.9.1"
    },
    "peerDependencies": {
        "@typescript-eslint/parser": "*",
        "eslint": "*",
        "typescript": "*"
    },
    "peerDependenciesMeta": {
        "@typescript-eslint/parser": {
            "optional": true
        },
        "typescript": {
            "optional": true
        }
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "tsup": {
        "entry": [
            "lib/index.ts"
        ],
        "clean": true,
        "declaration": true,
        "format": [
            "cjs"
        ]
    }
}
