{
    "name": "@workleap/stylelint-configs",
    "author": "Workleap",
    "description": "Workleap recommended Stylelint configurations.",
    "version": "2.0.3",
    "license": "Apache-2.0",
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gsoft-inc/wl-web-configs.git",
        "directory": "packages/stylelint-configs"
    },
    "scripts": {
        "build": "tsup",
        "eslint": "eslint . --max-warnings=-0 --cache --cache-location node_modules/.cache/eslint"
    },
    "peerDependencies": {
        "prettier": ">=2.0.0",
        "stylelint": ">=15"
    },
    "peerDependenciesMeta": {
        "prettier": {
            "optional": true
        },
        "stylelint": {
            "optional": true
        }
    },
    "dependencies": {
        "stylelint-config-standard": "^36.0.1",
        "stylelint-prettier": "^5.0.2"
    },
    "devDependencies": {
        "@types/node": "22.10.1",
        "@typescript-eslint/parser": "8.18.0",
        "@workleap/eslint-plugin": "workspace:*",
        "@workleap/tsup-configs": "workspace:*",
        "@workleap/typescript-configs": "workspace:*",
        "eslint": "8.57.0",
        "tsup": "8.3.5",
        "typescript": "5.7.2"
    }
}
