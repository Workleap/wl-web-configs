{
    "name": "@workleap/stylelint-config",
    "author": "Workleap",
    "description": "Workleap recommended stylelint config.",
    "version": "1.1.0",
    "license": "Apache-2.0",
    "keywords": [
        "workleap",
        "stylelint",
        "stylelint-plugin",
        "config",
        "css"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-web-configs.git",
        "directory": "packages/stylelint-config"
    },
    "scripts": {
        "build": "tsup",
        "clean": "pnpm dlx rimraf dist node_modules",
        "lint:types": "tsc --noEmit"
    },
    "dependencies": {
        "stylelint-config-standard": "32.0.0",
        "stylelint-prettier": "2.0.0"
    },
    "devDependencies": {
        "@workleap/typescript-configs": "workspace:*",
        "prettier": "2.8.7",
        "stylelint": "15.4.0"
    },
    "peerDependencies": {
        "prettier": ">=2.0.0",
        "stylelint": ">=15"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "tsup": {
        "entry": [
            "./index.ts"
        ],
        "clean": true,
        "declaration": true,
        "format": [
            "cjs"
        ]
    }
}
