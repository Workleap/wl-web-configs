{
    "name": "wl-web-configs",
    "author": "Workleap",
    "description": "Common configurations for building web apps and libraries at Workleap",
    "private": true,
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Workleap/wl-web-configs.git"
    },
    "scripts": {
        "build": "pnpm -r build",
        "build:eslint": "pnpm --filter=@workleap/eslint-plugin build",
        "changeset": "changeset",
        "clean": "pnpm run /^clean:.*/",
        "clean:pkg": "pnpm -r clean",
        "clean:root": "pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "lint": "pnpm run /^lint:.*/",
        "lint:eslint": "pnpm build:eslint && eslint . --ext .js,.jsx,.ts,.tsx  --cache --cache-location node_modules/.cache/eslint",
        "lint:types": "pnpm -r lint:types",
        "lint-ci": "pnpm run /^lint-ci:.*/",
        "lint-ci:eslint": "pnpm build:eslint && eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
        "release": "pnpm build && changeset publish",
        "test": "pnpm -r test"
    },
    "devDependencies": {
        "@workleap/eslint-plugin": "workspace:*",
        "@changesets/cli": "2.26.1",
        "@changesets/changelog-github": "0.4.8",
        "typescript": "5.0.4",
        "eslint": "8.38.0",
        "@types/node": "18.15.12",
        "@types/jest": "29.5.1"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
