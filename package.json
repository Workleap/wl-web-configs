{
    "name": "wl-web-configs",
    "author": "Workleap",
    "description": "Common configurations for building web apps and libraries at Workleap",
    "private": true,
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-web-configs.git"
    },
    "scripts": {
        "build": "pnpm -r build",
        "build:eslint": "pnpm --filter=@workleap/eslint-plugin build",

        "test": "jest",

        "lint": "pnpm run /^lint:.*/",
        "lint:eslint": "pnpm build:eslint && eslint . --ext .js,.jsx,.ts,.tsx  --cache --cache-location node_modules/.cache/eslint",
        "lint:types": "pnpm -r --parallel --filter=!typescript-configs exec tsc",
        "lint-ci": "pnpm run /^lint-ci:.*/",
        "lint-ci:eslint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=1",

        "changeset": "changeset",
        "release": "pnpm build && changeset publish",

        "clean": "pnpm -r --include-workspace-root --parallel exec pnpm dlx rimraf dist node_modules/.cache",
        "reset": "pnpm -r --include-workspace-root --parallel exec pnpm dlx rimraf dist node_modules"
    },
    "devDependencies": {
        "@workleap/eslint-plugin": "workspace:*",
        "@workleap/typescript-configs": "workspace:*",
        "@changesets/cli": "2.26.1",
        "@changesets/changelog-github": "0.4.8",
        "typescript": "5.0.4",
        "eslint": "8.38.0",
        "@types/node": "18.15.12",
        "@types/jest": "29.5.1",
        "jest": "29.5.0",
        "ts-jest": "29.1.0",
        "ts-node": "10.9.1"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
